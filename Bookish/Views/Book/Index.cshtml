@model List<Book>
@{
    ViewData["Title"] = "Books";
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <div class="text-center">
    
        <h1 class="display-4">Books</h1>
        <ul> 
            @foreach (var book in Model)
            {
                <li>
                    <h2>
                        <a asp-controller="Book" asp-action="Book" asp-route-id="@book.Id">
                            @book.Title  
                        </a>
                    </h2>
                    <p>By @book.Author.Name</p>
                    <img src="@book.CoverImageUrl" alt="@book.Title cover" style="width:500px;height:600px;">
                    <p>@book.Blurb</p>
                    
                    <h3 class="display-4">Genres</h3>
                    <ul>
                        @foreach (var genre in book.Genres)
                        {
                            <li>@genre.Name</li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
}